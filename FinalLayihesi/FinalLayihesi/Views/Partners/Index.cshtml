@model ViewModelPartners
@{
    ViewData["Title"] = "Index";
}

<section id="header-third-part">
    <div class="container">
        <h1>Partners</h1>
    </div>
</section>
<main>
    <section id="partners">
        <div class="container">
            <div class="row text-center intro">
                <div class="col-12">
                    <span class="pre-title">Union that achieves results</span>
                    <h2>Partnership <span>Network</span></h2>
                    <p>We work in partnership with the most reputable companies in the current market.</p>
                </div>
            </div>
            <div class="row justify-content-center items">
                @foreach (var item in Model.Partners)
                {
                <div data-aos="fade-up" class="col-12 col-md-6 item mb-4">
                    <div class="card">
                        <div class="col-12">
                            <img src="~/images/about/@item.Image" style="width: 20%;" alt="Logo" class="logo">
                            <p class="pt-4">@item.Description</p>
                            <div class="buttons">
                                <div class="d-sm-inline-flex">
                                    <a href="#" class="mt-3 btn outline-button">READ MORE</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </section>
</main>