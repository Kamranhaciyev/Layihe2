@model ViewModelAbout
@{
    ViewData["Title"] = "Index";
}

<section id="header-third-part">
    <div class="container">
        <h1>About Us</h1>
    </div>
</section>
<main>
    <section id="about-main-second-part">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8">
