@model List<FinalLayihesi.Models.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>About</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Pretitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Title1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Title2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstOrDefault().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Pretitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-controller="About" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
